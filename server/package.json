{
  "name": "dalog-server",
  "version": "0.0.0",
  "description": "A log server for debugging",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": "Mgen (https://www.mgenware.com)",
  "homepage": "https://github.com/mgenware/layit",
  "bugs": "https://github.com/mgenware/layit/issues",
  "keywords": [
    "layit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/layit.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "yarn run clean && yarn run compile && yarn run lint && yarn run t",
    "t": "mocha --require source-map-support/register dist_tests/**/*.test.js",
    "build": "cross-env NODE_ENV=production yarn run copyfiles && yarn test",
    "compile": "tsc -b tests",
    "dev": "cross-env NODE_ENV=development yarn run clean && yarn run copyfiles && tsc -b tests -w",
    "prepublishOnly": "yarn run build",
    "lint": "eslint --max-warnings 0 --ext .ts src/ tests/",
    "clean": "del-cli dist && del-cli dist_tests",
    "copyfiles": "cpy src/home.html dist"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/dist/**/*.js",
    "/dist/**/*.ts",
    "/dist/**/*.css",
    "/dist/**/*.map",
    "/dist/**/*.html"
  ],
  "dependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.12",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.2",
    "del-cli": "^3.0.1",
    "eslint": "^7.2.0",
    "express": "^4.17.1",
    "internal-ip": "^6.0.0",
    "mocha": "^7.2.0",
    "node-fetch": "^2.6.0",
    "source-map-support": "^0.5.19",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/node-fetch": "^2.5.7",
    "cpy-cli": "^3.1.1"
  }
}
